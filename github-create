github-create (){
  if [ $1 ]
	then
    repo_name=$1
  else
    echo "Enter repo name:"
    read repo_name
  fi

  curl -i -u 'a-a-ron:MY-ACCESS-TOKEN' -d '{"name":"'$repo_name'","auto_init":"true"}' https://api.github.com/user/repos
  git remote add origin git@github.com:a-a-ron/$repo_name.git
  git push -u origin master
}
