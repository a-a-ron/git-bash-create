github-create (){
  if [ $1 ]
	then
    repo_name=$1
  else
    echo "Enter repo name:"
    read repo_name
  fi

  echo "Do you want to add a repo description? [y/n]"
  read description

  if [ $description == "y" ]
  then
    echo "Type your description:"
    read repo_description

    curl -i -u 'a-a-ron:MY-ACCESS-TOKEN' -d '{"name":"'$repo_name'","auto_init":"true", "description":"'$repo_description'"}' https://api.github.com/user/repos
    git remote add origin git@github.com:a-a-ron/$repo_name.git
    git push -u origin master
  else
    echo -n "Repo will be created with no description"
    echo

    curl -i -u 'a-a-ron:MY-ACCESS-TOKEN' -d '{"name":"'$repo_name'","auto_init":"true"}' https://api.github.com/user/repos
    git remote add origin git@github.com:a-a-ron/$repo_name.git
    git push -u origin master
  fi
}
